<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="32dp"/>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado del Análisis"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"/>

        <!-- Imagen analizada -->
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <ImageView
                android:id="@+id/ivImagenAnalizada"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <!-- Resultado del análisis -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diagnóstico Detectado:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#546E7A"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvClaseDetectada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargando..."
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nivel de Confianza:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#546E7A"
                    android:layout_marginBottom="8dp"/>

                <ProgressBar
                    android:id="@+id/pbConfianza"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:progressTint="#4CAF50"/>

                <TextView
                    android:id="@+id/tvPorcentajeConfianza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Recomendaciones -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recomendaciones:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#546E7A"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvRecomendaciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargando recomendaciones..."
                    android:textSize="14sp"
                    android:textColor="#607D8B"
                    android:lineSpacingMultiplier="1.2"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTomarOtraFoto"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Tomar Otra Foto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"
                app:cornerRadius="28dp"
                app:strokeWidth="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVolverHome"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Volver al Inicio"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@android:color/white"
                android:textColor="#2196F3"
                app:cornerRadius="28dp"
                app:strokeWidth="2dp"
                app:strokeColor="#2196F3"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>